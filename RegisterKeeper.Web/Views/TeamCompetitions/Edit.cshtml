@model RegisterKeeper.Web.ViewModels.TeamCompetitionViewModel

@{
    ViewBag.Title = "Edit Team Competition";
}

@* Fork of bootstrap-datetimepicker project - http://www.malot.fr/bootstrap-datetimepicker/ *@
<link href="~/Content/datetimepicker.css" rel="stylesheet" />

@using (Html.BeginForm("Edit", "TeamCompetitions", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ViewBag.Title</legend>

        @Html.EditorFor(vm => vm.Competition)

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
        </div>

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Html.Partial("_DateTimePickerJs")
}