@model Int32?

@{
    object textBoxHtmlAttributes = ViewData["readonly"] != null && (bool) ViewData["readonly"] ? new { @readonly = "readonly" } : null;
}

<div class="control-group">
    @Html.LabelForModel(new { @class = "control-label" })
    <div class="controls">
        @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, textBoxHtmlAttributes)
        @Html.ValidationMessageFor(model => model)
    </div>
</div>
