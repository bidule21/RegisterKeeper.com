@using RegisterKeeper.Web.Models
@model TeamCompetitor

@using (Html.BeginForm("AddCompetitor", "TeamRegisterCards", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add shooter for <i>@Model.TeamRegisterCard.TeamName</i></legend>

        @Html.HiddenFor(teamCompetitor => teamCompetitor.TeamRegisterCardId)
        
        @Html.EditorForModel()

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Details", "TeamCompetitions", new { Id = Model.TeamRegisterCard.TeamCompetitionId }, new { @class = "btn" })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
