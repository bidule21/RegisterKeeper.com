@using RegisterKeeper.Web.Models
@model IndividualRegisterCard

@using (Html.BeginForm("AddShooter", "TeamRegisterCards", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.Hidden("TeamRegisterCardId", (int)ViewBag.TeamRegisterCardId)

    <fieldset>
        <legend>Add shooter for <i>@ViewBag.CompetitionName</i></legend>

        @Html.Partial("_CreateEditIndividualRegisterCardFields")

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Details", "TeamCompetitions", new { Id = (int)ViewBag.CompetitionId }, new { @class = "btn" })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
